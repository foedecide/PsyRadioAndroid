<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- parents -->
    <style name="fill_all">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
    <style name="wrap_all_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- styles -->
    <style name="dashboard">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/main_background</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">@color/text</item>
    </style>
    
    <style name="dashboard_land_container">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginBottom">0dip</item>
    </style>
    
    <style name="dashboard_logo_land">
        <item name="android:background">@drawable/main_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">0dip</item>
    </style>
    
    <style name="dashboard_logo" parent="@style/dashboard_logo_land">
        <item name="android:layout_marginTop">10dip</item>
    </style>
    
    <style name="dashboard_button_container">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:layout_marginBottom">0dip</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="dashboard_image_container">
        <item name="android:background">@drawable/main_background</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:selectable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="dashboard_item_image" parent="@style/wrap_all_content">
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="dashboard_item_label" parent="@style/wrap_all_content">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/text</item>
    </style>
    
    <style name="dashboard_title_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/main_background</item>
        <item name="android:textSize">20dip</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/text</item>
    </style>
    
    <style name="dashboard_error_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/main_background</item>
        <item name="android:textSize">12dip</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/alert</item>
    </style>
    
    
    <style name="seekbar_box_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/main_background</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">0dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:textColor">@color/text</item>
    </style>
    <style name="seekbar_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
    </style>
    
    
    <style name="about_text">
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:autoLink">all</item>
      <item name="android:textColorLink">@color/links</item>
      <item name="android:textColor">@color/about_text</item>
      <item name="android:typeface">sans</item>
      <item name="android:textSize">16dip</item>
      <item name="android:text">@string/about_text</item>
      <item name="android:singleLine">false</item>
    </style>
</resources>